<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:gravity="fill_vertical" >

    <ImageView
        android:id="@+id/HeaderImageView"
        style="@style/TitleTextView"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu_header"
        android:gravity="center"
        android:minLines="2"
        android:src="@drawable/menu_choose_weapon" />

    <ImageButton
        android:id="@+id/EggImageButton"
        style="@style/ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/axeImageButton"
        style="@style/ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/EggImageButton"
        android:layout_below="@+id/EggImageButton"
        android:layout_margin="20dp"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/tomatoImageButton"
        style="@style/ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_below="@+id/imageButton1"
        android:layout_margin="20dp"
        android:src="@drawable/apple"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/bottleImageButton"
        style="@style/ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/HeaderImageView"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/imageButton2"
        android:src="@drawable/ic_launcher"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/menu_exit_button" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/menu_more_apps_button" />

    <ImageButton
        android:id="@+id/knifeImageButton"
        style="@style/ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/imageButton1"
        android:layout_alignTop="@+id/axeImageButton"
        android:layout_margin="20dp"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/hunterKnifeImageButton"
        style="@style/ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/HeaderImageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
